<div class="sm-container">
  <h1>Sign up with BrokoliOverflow!</h1>

  <% if @errors %>
  <%= erb :'/_errors', layout: false %>
  <% end %>

  <form action="/users" method="post">
  <input type="text" name="user[name]" placeholder="Full Name"/>
  <input type="text" name="user[username]" placeholder="Username"/>
  <input type="text" name="user[email]" placeholder="Email Address"/>
  <input type="password" name="user[password]" placeholder="Password"/>
  <input type="submit" name"submit">
  </form>


  <p>Already have an account? Log in and <a href='/sessions/new'>Broc' on!</a></p>
</div>

<div class="welcome-gif">
  <img src="/images/holding_brocc.gif" width="500px" height="auto">
</div>

