<h1><%= @user.username %>'s profile!</h1>

<div class="user-stats">
  <!-- <p>some stats</p> -->
</div>

<div class="list-container profile-list">
  <div class="profile-left">
    <h2><%= @user.username  %>'s questions</h2>
      <% @user.questions.each do |q|  %>
        <%= erb :'questions/_question_title', layout: false, locals: { question: q } %>
      <% end %>
  </div>

  <div class="profile-right">
    <h2><%= @user.username  %>'s answers</h2>
    <h6>linked through the questions below</h6>
    <% @user.answers.each do |a|  %>
      <%= erb :'answers/_answer_summary', layout: false, locals: { answer: a } %>
    <% end %>
  </div>
</div>
