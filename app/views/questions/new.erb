<h1>Ask a Question</h1>
<% if @errors %>
  <%= erb :'_errors', layout: false %>
<% end %>
<div class="sm-container">
  <form id="question-form" action="/questions" method="POST">
    <label for="title">Title</label>
    <input type="text" id="title" placeholder="What is your question?" name="question[title]">
    <label for="description">Description</label>
    <textarea id="description" name="question[content]" placeholder="Describe your question..." rows="4" cols="50" maxlength="500" form="question-form"></textarea>
    <input type="submit" value="Ask the Brok gods">
  </form>
</div>
